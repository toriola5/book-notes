<%- include("partials/header.ejs") %>

<div class="container">
    <h1>Verify Your Account</h1>
    <p>Please enter the verification code sent to your email:</p>
    
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="error-message" style="color: red; margin-bottom: 15px; background: #f8d7da; padding: 10px; border-radius: 5px; border: 1px solid #f5c6cb;">
            <%= error %>
        </div>
    <% } %>
    
    <% if (typeof success !== 'undefined' && success) { %>
        <div class="success-message" style="color: green; margin-bottom: 15px; background: #d4edda; padding: 10px; border-radius: 5px; border: 1px solid #c3e6cb;">
            <%= success %>
        </div>
    <% } %>
    
    <form action="/verify" method="POST">
        <div class="form-group">
            <label for="verificationCode">Verification Code:</label>
            <input type="text" id="verificationCode" name="verificationCode" maxlength="6" placeholder="Enter 6-digit code" required>
        </div>
        
        <button type="submit">Verify Account</button>
    </form>
    
    <div class="resend-section">
        <p>Didn't receive the code? <a href="/resend-code">Resend Code</a></p>
    </div>
</div>

<%- include("partials/footer.ejs") %>