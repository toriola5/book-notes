<%- include("partials/header.ejs") %>

<div class="container">
    <h1>Resend Verification Code</h1>
    <p>Please input your email to resend the verification code:</p>
    
    <% if (typeof error !== 'undefined') { %>
        <div class="error-message" style="color: red; margin-bottom: 15px;">
            <%= error %>
        </div>
    <% } %>
    
    <% if (typeof success !== 'undefined') { %>
        <div class="success-message" style="color: green; margin-bottom: 15px;">
            <%= success %>
        </div>
    <% } %>
    
    <form action="/reverify" method="POST">
        <div class="form-group">
            <label for="email">Email Address:</label>
            <input type="email" id="email" name="email" placeholder="Enter your email address" required>
        </div>
        
        <button type="submit">Resend Verification Code</button>
    </form>
    
    <div class="back-link">
        <p><a href="/login">Back to Login</a></p>
    </div>
</div>

<%- include("partials/footer.ejs") %>